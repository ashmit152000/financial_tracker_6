
	<table class="table">
  <thead>
    <tr>
      
      <th scope="col">Full Name</th>
      <th scope="col">Email</th>
      <th scope="col">Stocks followed</th>
       <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>

<% @friends.each do |friend| %>
      <td><%=friend.first_name.capitalize + " " + friend.last_name.capitalize if friend.first_name && friend.last_name %></td>
      <td><%= friend.email if friend.email %></td>
      <td><%= friend.stocks.count if friend.stocks %></td>
      <td><%= link_to "Unfriend", friendship_path(friend.id) , class:"btn btn-outline-warning",method: :delete %></td>
    </tr>

 <% end %>
    
  </tbody>
</table>
